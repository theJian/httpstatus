{
  "compileOnSave": false,
  "compilerOptions": {
    "removeComments": true,
    "module": "ES6",
    "moduleResolution": "node",
    "target": "ES5",
    "sourceMap": true,
    "noImplicitReturns": true,
    "strict": true,
    "allowJs": false,
    "diagnostics": true,
    "noImplicitAny": true,
    "lib": ["ES6", "ES5", "DOM"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
